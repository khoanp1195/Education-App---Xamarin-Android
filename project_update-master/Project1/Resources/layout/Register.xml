<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:id="@+id/nestedScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

  
        
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="80dp"
        android:layout_gravity="center"
            android:layout_height="80dp"
            android:src="@drawable/icon_quiz"/>
   
    <TextView
        android:layout_gravity="center"
        android:text="EDUCATIONAL"
        android:fontFamily="@font/doan"
        android:textStyle="bold"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
       
    <TextView
        android:layout_gravity="center"
        android:text="A place to help you learn and share knowledge with each other"
        android:fontFamily="@font/doan"
        android:gravity="center"

        android:textColor="@color/colorBlue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
        


     <LinearLayout
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_weight="0.80">
            
          <android.support.design.widget.TextInputLayout
            android:theme="@style/AppBlue"
            android:layout_marginTop="10dp"
            android:id="@+id/signup_input_fullname"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                 android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:hint="Full Name"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
            />
        </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
            android:theme="@style/AppBlue"
            android:layout_marginTop="10dp"
           android:id="@+id/signup_input_phone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                 android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                   android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:hint="Phone Number"
                android:inputType="number"
                android:imeOptions="actionNext"
            />
        </android.support.design.widget.TextInputLayout>
      
        <android.support.design.widget.TextInputLayout
            android:theme="@style/AppBlue"
            android:layout_marginTop="10dp"
               android:id="@+id/signup_input_email"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                 android:id="@+id/edt_email"
                 android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
            />
        </android.support.design.widget.TextInputLayout>
        
         
        <android.support.design.widget.TextInputLayout
             android:theme="@style/AppBlue"
           android:id="@+id/signup_input_password"
              android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                 android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                 android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:hint="Password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
            />
        </android.support.design.widget.TextInputLayout>
        

          <android.support.design.widget.TextInputLayout
             android:theme="@style/AppBlue"
             android:id="@+id/signup_input_confirmpassword"
            android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
            android:layout_width="match_parent">
            <EditText
                 android:theme="@style/AppBlue"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
            />
        </android.support.design.widget.TextInputLayout>
      
         <Button
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_height="45dp"
        android:text="Register"
        android:background="@drawable/roundbutton"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:layout_width="300dp"/>

        <TextView
          
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:id="@+id/signin"
               android:text="Do you have an account? Sign In"
       />
       
   </LinearLayout>
            </LinearLayout>
    

</android.support.v4.widget.NestedScrollView>
