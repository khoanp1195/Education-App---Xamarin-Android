<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/nestedScrollView1"
    android:background="@color/background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar1"
            android:background="@drawable/background"
            android:minHeight="?android:attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:elevation="4dp"    >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:text="Scan Text"
                    android:textStyle="bold"
                    android:fontFamily="@font/doan"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:id="@+id/backButton"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/back2"
                    android:tint="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>






            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/thisImageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/txtTotalQuestion">

     
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="20dp"
                android:elevation="300dp"
                app:cardBackgroundColor="@color/followersBg"
                android:id="@+id/captureButton"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/camera"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/captureButton"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:text="Capture"
                android:textColor="@color/bluehigh"
                android:textSize="10sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/captureButton"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:text="Process"
                android:textColor="@color/bluehigh"
                android:textSize="10sp" />



            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="140dp"
                android:id="@+id/processBtn"
                app:cardBackgroundColor="@color/yello"
                android:elevation="300dp"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_process"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="XmlNamespace" />
                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="220dp"


                >
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/power_off" />
            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/edtText"
            android:layout_width="match_parent"
            android:layout_height="650dp"/>


        <Button
            android:background="@drawable/round_btn"
            android:layout_width="300dp"

            android:id="@+id/btnAdd"
            android:layout_gravity="center"
            android:text="Add to Data Scan Text"
            android:layout_height="50dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/txtTotalQuestion">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_copy"
                android:layout_marginLeft="250dp"
                android:src="@drawable/copy" />


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="20dp"
                android:elevation="300dp"

                app:cardBackgroundColor="@color/followersBg"
                android:id="@+id/sharefile"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_share"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"

                android:layout_marginLeft="140dp"
                android:id="@+id/shareTxt"
                app:cardBackgroundColor="@color/yello"
                android:elevation="300dp"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_sent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="XmlNamespace" />
                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
