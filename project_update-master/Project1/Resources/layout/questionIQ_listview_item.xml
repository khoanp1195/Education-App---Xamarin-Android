<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent">  
    

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     

    <TextView  
        android:text="Question"  
            android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/txtView_Question" />  
    <TextView  
        android:text="Image"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/txtView_Image" />  
    <TextView  
        android:text="AnswerA"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/txtView_AnswerA" />  
     <TextView  
        android:text="AnswerB"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/txtView_AnswerB" /> 
     <TextView  
        android:text="AnswerC"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/txtView_AnswerC" /> 
     <TextView  
        android:text="AnswerD"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/txtView_AnswerD" /> 
         <TextView  
        android:text="CorrectAnswer"  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
            android:textStyle="bold"
        android:textColor="@color/yello"
        android:id="@+id/Correct_Answer" /> 


                 <TextView  
        android:text="Má»©c: "  
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
            android:textStyle="bold"
        android:textColor="@color/yello"
        android:id="@+id/muc_Answer" /> 




